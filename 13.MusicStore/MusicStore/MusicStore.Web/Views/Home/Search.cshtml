@model SearchViewModel
@{
    ViewData["Title"] = $"Search Results for {Model.SearchText}";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Artists.Any())
{
    <h3>Artists</h3>
    <ul>
        @foreach (var artist in Model.Artists)
        {
            <li>@artist.Name</li>
        }
    </ul>
}
else
{
    <h3>No artists found.</h3>
}
<br />
@if (Model.Songs.Any())
{
    <h3>Songs</h3>
    <ul>
        @foreach (var song in Model.Songs)
        {
            <li><a asp-controller="Songs" asp-action="Details" asp-route-id="@song.Id">@song.Name</a></li>
        }
    </ul>
}
else
{
    <h3>No Songs found.</h3>
}
<br />
@if (Model.Albums.Any())
{
    <h3>Albums</h3>
    <ul>
        @foreach (var album in Model.Albums)
        {
            <li><a asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id">@album.Title</a></li>
        }
    </ul>
}
else
{
    <h3>No Albums found.</h3>
}