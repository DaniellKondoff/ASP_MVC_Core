@model IEnumerable<SaleListModel>
@{
    ViewData["Title"] = "All Sales";
}

<h2>
    All Sales
    <a class="btn btn-primary" href="/sales/create">Add Sale</a>
</h2>

<table class="table">
    <thead>
        <tr>
           <th>
               Car
           </th>
            <th>
                Customer
            </th>
            <th>
                Price
            </th>
            <th>
                Price With Discount
            </th>
            <th>
                Discount Percent
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>
                    <ul>
                        <li>@sale.Car.Make</li>
                        <li>@sale.Car.Model</li>
                        <li>@(sale.Car.TravelledDistance / 1000) KM</li>
                    </ul>
                </td>
                <td>
                    @sale.Customer
                </td>
                <td>
                    @sale.Price.ToPrice()
                </td>
                <td>
                    @sale.PriceWithDiscount.ToPrice()
                </td>
                <td>
                    @sale.Discount.ToPercentage()
                </td>
                <td>
                    <a class="btn btn-sm btn-default" href="/sales/@sale.Id">More Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

