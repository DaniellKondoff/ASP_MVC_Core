@model IEnumerable<AllSuppliersViewModel>
@{
    ViewData["Title"] = "All Suppliers";
}

<h2>
    @ViewData["Title"]
    <a href="/suppliers/create" class="btn btn-primary">New Supplier</a>
</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Importer
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>
                    @supplier.Name
                </td>
                <td>
                    @supplier.Importer
                </td>
                <td>
                    <a href="/suppliers/edit/@supplier.Id" class="btn btn-warning">Edit</a>
                    <a href="/suppliers/delete/@supplier.Id" class="btn btn-danger" >Dellete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

