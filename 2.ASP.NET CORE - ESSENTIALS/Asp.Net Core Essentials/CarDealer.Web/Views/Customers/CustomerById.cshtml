@model CustomerTotalSalesModel
@{
    ViewData["Title"] = $"Customer {Model.Name}";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Total Cars
            </th>
            <th>
                Total Spent Money
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Name
            </td>
            <td>
                @Model.BoughtCars.Count()
            </td>
            <td>
                $@Model.TotalSpentMoney.ToString("F2")
            </td>
        </tr>
    </tbody>
</table>

