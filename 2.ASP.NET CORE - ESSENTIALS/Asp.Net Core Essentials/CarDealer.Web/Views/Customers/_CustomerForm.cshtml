@model CustomerFormModel

<form method="post">
    <h2>@(Model == null ? "Create" : "Edit")Customer</h2>
    <hr />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" type="date" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsYoungDriver"></label>
        <input asp-for="IsYoungDriver" />
        <span asp-validation-for="IsYoungDriver" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" value="@(Model==null ? "Add" : "Edit") Customer"/>
</form>

